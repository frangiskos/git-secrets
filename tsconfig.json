{
    "compilerOptions": {
        /* Basic Options */
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "removeComments": true,
        "importHelpers": true,
        "strict": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "listEmittedFiles": true,
        "pretty": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
